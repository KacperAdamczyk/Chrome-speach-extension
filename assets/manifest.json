{
  "manifest_version": 2,

  "name": "Voice control",
  "description": "This extension allows to control web page using voice commands.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background/background.bundle.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "storage",
    "background"
  ]
}
